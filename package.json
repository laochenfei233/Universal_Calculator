{
  "name": "multi-calculator",
  "version": "1.0.0",
  "description": "多功能计算器 - 支持常规、科学、个税、房贷等计算",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "build": "webpack --mode production",
    "vercel-build": "npm run build && vercel --prod",
    "test": "jest",
    "docker:build": "docker build -t universal_calculator .",
    "docker:run": "docker run -p 3000:3000 universal_calculator",
    "docker:deploy": "npm run docker:build && npm run docker:run"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2"
  },
  "devDependencies": {
    "axios": "^1.11.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "calculator",
    "tax",
    "mortgage",
    "bmi",
    "converter"
  ],
  "author": "",
  "license": "MIT"
}
